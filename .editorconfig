# https://editorconfig.org/
# 코드 스타일 검사 명령어: ./gradlew ktlintCheck

root = true

[*]
# text encoding
charset = utf-8

# line type & style
end_of_line = lf
insert_final_newline = true

# indent style & size
indent_style = space
indent_size = 4
tab_width = 4

# code line length
max_line_length = 120

# Repository, Class 등 내용이 비어있을 때 에러가 나지 않도록 설정
ktlint_standard_no-empty-class-body = disabled